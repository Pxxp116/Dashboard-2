{
  "name": "gastrobot-dashboard",
  "version": "2.0.0",
  "private": true,
  "description": "Dashboard de administración para GastroBot - Sistema de gestión de reservas para restaurantes",
  "author": "GastroBot Team",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "lucide-react": "^0.309.0",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^3.4.17",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "cross-env CI=false react-scripts build",
    "build:railway": "cross-env CI=false GENERATE_SOURCEMAP=false react-scripts build",
    "build:windows": "set CI=false && react-scripts build",
    "build:unix": "CI=false react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-console": "off",
      "react/prop-types": "off",
      "react-hooks/exhaustive-deps": "off",
      "import/no-anonymous-default-export": "off",
      "jsx-a11y/iframe-has-title": "off",
      "jsx-a11y/anchor-is-valid": "off",
      "no-unreachable": "warn",
      "no-undef": "warn"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "eslint": "^8.48.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/gastrobot-dashboard.git"
  },
  "keywords": [
    "restaurant",
    "reservations",
    "dashboard",
    "react",
    "management",
    "gastrobot"
  ]
}
