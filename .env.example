# ====================================
# CONFIGURACIÓN DE GASTROBOT DASHBOARD
# ====================================
# Copia este archivo a .env y configura tus valores

# API Configuration
# URL del backend de GastroBot
REACT_APP_API_URL=https://backend-2-production-227a.up.railway.app/api

# Environment
# Valores posibles: development, staging, production
NODE_ENV=development

# Puerto de desarrollo (opcional, por defecto 3000)
PORT=3000

# Configuración de autenticación (si se implementa)
# REACT_APP_AUTH_ENABLED=false
# REACT_APP_AUTH_ENDPOINT=

# Configuración de WebSocket (si se implementa para tiempo real)
# REACT_APP_WS_ENABLED=false
# REACT_APP_WS_URL=wss://tu-websocket-url.com

# Configuración de características
# Habilitar/deshabilitar funcionalidades específicas
REACT_APP_FEATURE_RESERVATIONS=true
REACT_APP_FEATURE_MENU=true
REACT_APP_FEATURE_TABLES=true
REACT_APP_FEATURE_POLICIES=true
REACT_APP_FEATURE_MIRROR=true

# Configuración de logs
# Nivel de logs: error, warn, info, debug
REACT_APP_LOG_LEVEL=info

# Configuración de análisis (opcional)
# REACT_APP_ANALYTICS_ENABLED=false
# REACT_APP_ANALYTICS_ID=

# Configuración de idioma
REACT_APP_DEFAULT_LANGUAGE=es

# Configuración de zona horaria
REACT_APP_TIMEZONE=Europe/Madrid

# Configuración de actualización automática (en segundos)
REACT_APP_AUTO_REFRESH_INTERVAL=15

# Configuración de límites
REACT_APP_MAX_MIRROR_AGE=30
REACT_APP_MESSAGE_DURATION=3000

# Configuración de desarrollo
# Mostrar herramientas de desarrollo
REACT_APP_DEV_TOOLS=true

# URL de documentación
REACT_APP_DOCS_URL=https://docs.gastrobot.com

# Versión de la API
REACT_APP_API_VERSION=v1