# ====================================
# CONFIGURACIÓN DE GASTROBOT DASHBOARD
# ====================================
# Copia este archivo a .env y configura tus valores

# ===========================
# CONFIGURACIÓN DE API
# ===========================
# URL del backend de GastroBot
# En Railway, esta URL será dinámica y se generará automáticamente
# Para desarrollo local, usa http://localhost:3002/api
REACT_APP_API_URL=http://localhost:3002/api

# Configuración adicional de API
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RETRY_ATTEMPTS=3

# ===========================
# CONFIGURACIÓN DE AMBIENTE
# ===========================
# Valores posibles: development, staging, production
NODE_ENV=development

# Puerto de desarrollo (opcional, por defecto 3000)
PORT=3000

# ===========================
# FEATURES PRINCIPALES DEL SISTEMA
# ===========================
# Features básicas (siempre disponibles para funcionamiento básico)
REACT_APP_FEATURE_RESERVATIONS=true
REACT_APP_FEATURE_MENU=true
REACT_APP_FEATURE_TABLES=true
REACT_APP_FEATURE_POLICIES=false
REACT_APP_FEATURE_MIRROR=true

# ===========================
# FEATURES ADICIONALES/PREMIUM
# ===========================
# Analytics y reportes
REACT_APP_FEATURE_ANALYTICS=false
REACT_APP_FEATURE_REPORTS=false

# Programa de lealtad
REACT_APP_FEATURE_LOYALTY=false

# Delivery/entrega a domicilio
REACT_APP_FEATURE_DELIVERY=false

# Branding personalizado
REACT_APP_FEATURE_BRANDING=false

# Control de inventario
REACT_APP_FEATURE_INVENTORY=false

# ===========================
# FEATURES DE INTEGRACIÓN
# ===========================
# Integración WhatsApp
REACT_APP_FEATURE_WHATSAPP=false

# Notificaciones por email
REACT_APP_FEATURE_EMAIL=false

# Notificaciones por SMS
REACT_APP_FEATURE_SMS=false

# Login social (Google, Facebook, etc.)
REACT_APP_FEATURE_SOCIAL_LOGIN=false

# ===========================
# CONFIGURACIÓN DE BRANDING
# ===========================
# Personalización del restaurante
REACT_APP_RESTAURANT_NAME=GastroBot
REACT_APP_PRIMARY_COLOR=#1976d2
REACT_APP_SECONDARY_COLOR=#dc004e
# REACT_APP_LOGO_URL=https://tu-dominio.com/logo.png
# REACT_APP_FAVICON_URL=https://tu-dominio.com/favicon.ico
# REACT_APP_CUSTOM_CSS=https://tu-dominio.com/custom.css

# ===========================
# CONFIGURACIÓN DEL SISTEMA
# ===========================
# Configuración de logs
# Nivel de logs: error, warn, info, debug
REACT_APP_LOG_LEVEL=info

# Configuración de idioma y zona horaria
REACT_APP_DEFAULT_LANGUAGE=es
REACT_APP_TIMEZONE=Europe/Madrid

# Configuración de actualización automática (en segundos)
REACT_APP_AUTO_REFRESH_INTERVAL=15

# Configuración de límites
REACT_APP_MAX_MIRROR_AGE=30
REACT_APP_MESSAGE_DURATION=3000

# Configuración de desarrollo
# Mostrar herramientas de desarrollo
REACT_APP_DEV_TOOLS=true

# Versión de la API
REACT_APP_API_VERSION=v1

# ===========================
# VARIABLES AUTOMÁTICAS DE RAILWAY
# ===========================
# Estas variables son configuradas automáticamente por Railway
# No necesitas configurarlas manualmente en producción
# RAILWAY_STATIC_URL=https://tu-proyecto.railway.app
# RAILWAY_PUBLIC_DOMAIN=tu-proyecto.railway.app
# PORT=3000

# ===========================
# CONFIGURACIÓN PARA MÚLTIPLES RESTAURANTES
# ===========================
# Ejemplo para Restaurante Básico:
# REACT_APP_FEATURE_RESERVATIONS=true
# REACT_APP_FEATURE_MENU=true  
# REACT_APP_FEATURE_TABLES=true
# REACT_APP_FEATURE_POLICIES=false
# REACT_APP_FEATURE_LOYALTY=false
# REACT_APP_FEATURE_DELIVERY=false

# Ejemplo para Restaurante Premium:
# REACT_APP_FEATURE_RESERVATIONS=true
# REACT_APP_FEATURE_MENU=true
# REACT_APP_FEATURE_TABLES=true
# REACT_APP_FEATURE_POLICIES=true
# REACT_APP_FEATURE_LOYALTY=true
# REACT_APP_FEATURE_DELIVERY=true
# REACT_APP_FEATURE_ANALYTICS=true
# REACT_APP_FEATURE_BRANDING=true