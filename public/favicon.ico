<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100">
  <!-- Fondo circular -->
  <circle cx="50" cy="50" r="45" fill="#2563eb"/>
  
  <!-- Icono de taza de café simplificado -->
  <g transform="translate(50, 50)">
    <!-- Taza -->
    <rect x="-20" y="-10" width="40" height="25" rx="3" fill="white"/>
    
    <!-- Asa de la taza -->
    <path d="M 20 -5 Q 28 -5, 28 5 Q 28 15, 20 15" 
          stroke="white" 
          stroke-width="4" 
          fill="none"
          stroke-linecap="round"/>
    
    <!-- Vapor del café -->
    <path d="M -10 -18 Q -8 -25, -10 -32" 
          stroke="white" 
          stroke-width="2" 
          fill="none"
          stroke-linecap="round"
          opacity="0.8"/>
    <path d="M 0 -18 Q 2 -25, 0 -32" 
          stroke="white" 
          stroke-width="2" 
          fill="none"
          stroke-linecap="round"
          opacity="0.8"/>
    <path d="M 10 -18 Q 12 -25, 10 -32" 
          stroke="white" 
          stroke-width="2" 
          fill="none"
          stroke-linecap="round"
          opacity="0.8"/>
  </g>
  
  <!-- Texto opcional G -->
  <text x="50" y="85" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="white" text-anchor="middle">G</text>
</svg>